    <%= form.text_field :email, class:"form-control form-control-lg", placeholder: "Email" %>
  </div>

  <div class="field mb-3">
    <%= form.text_field :pphone, class:"form-control form-control-lg", placeholder: "Phone Number" %>
  </div>

  <div class="field mb-3">
    <%= form.text_field :twitter, class:"form-control form-control-lg", placeholder: "Twitter" %>
  </div>

